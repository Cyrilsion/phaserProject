{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es6", 
    "outFile": "./dist/bundle.js"
  },
  "include": [
    "./src/*.ts", 
    "./src/scenes/*.ts"
  ],
  "typeRoots": [
    "./lib/*.ts"
],
  "types": [
    "Phaser"
]
}